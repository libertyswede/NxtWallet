<Page
    x:Class="NxtWallet.Views.ReceiveMoneyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nxtWallet="using:NxtWallet"
    mc:Ignorable="d"
    DataContext="{Binding ReceiveMoneyViewModel, Source={StaticResource Ioc}}">
    <Page.Resources>
        <nxtWallet:BoolToVisiblityConverter x:Key="BoolToVisiblityConverter" />
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Text="{x:Bind ViewModel.NxtAddress}" Margin="10,10,-10,-10" Visibility="{x:Bind ViewModel.ShowAddress, Converter={StaticResource BoolToVisiblityConverter}}"/>
        <TextBlock Text="{x:Bind ViewModel.PublicKey}" Margin="10,38,-10,-38" Visibility="{x:Bind ViewModel.ShowAddress, Converter={StaticResource BoolToVisiblityConverter}}"/>
        <Image Source="{x:Bind ViewModel.NxtAddressQr}" Margin="10,80,0,0" Width="200" Height="200"
               Visibility="{x:Bind ViewModel.ShowAddress, Converter={StaticResource BoolToVisiblityConverter}}"/>

    </Grid>
</Page>
