<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:NxtWallet.Controls"
    xmlns:nxtWallet="using:NxtWallet"
    x:Class="NxtWallet.Views.SendMoneyPage"
    mc:Ignorable="d"
    DataContext="{Binding Path=SendMoneyViewModel, Source={StaticResource Ioc}}">

    <Page.Resources>
        <ResourceDictionary>
            <nxtWallet:HasTextToVisiblityConverter x:Key="HasTextToVisiblityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Canvas.ZIndex="0" Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="Send NXT" FontSize="29.333" Margin="0,0,0,15" />

            <TextBlock Grid.Column="0" Grid.Row="2" Text="Recipient:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,7,10,0" />
            <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,0,0,5" Grid.ColumnSpan="2" Orientation="Horizontal">
                <TextBox Width="300" MaxLength="24" HorizontalAlignment="Left" Text="{x:Bind ViewModel.Recipient, Mode=TwoWay}" />
                <TextBlock Text="{Binding Path=Errors[Recipient][0]}" Foreground="Red" HorizontalAlignment="Right" Margin="5,7,0,0" />
            </StackPanel>

            <TextBlock Grid.Column="0" Grid.Row="3" Text="Amount:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,7,10,13" />
            <StackPanel Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,5" Orientation="Horizontal">
                <TextBox Width="300" MaxLength="20" HorizontalAlignment="Left" Text="{x:Bind ViewModel.Amount, Mode=TwoWay}"/>
                <TextBlock Text="{Binding Path=Errors[Amount][0]}" Foreground="Red" HorizontalAlignment="Right" Margin="5,7,0,0" />
            </StackPanel>

            <TextBlock Grid.Column="0" Grid.Row="4" Text="Fee:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,7,10,13" />
            <TextBlock Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Margin="10,7,0,5" HorizontalAlignment="Left" 
                       Text="{x:Bind ViewModel.Fee, Mode=OneWay}"/>
            
            <TextBlock Grid.Column="0" Grid.Row="5" Text="Public message:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,7,10,0" />
            <TextBox Grid.Column="1" Grid.Row="5" Width="300" Height="80" MaxLength="1000" HorizontalAlignment="Left" Text="{x:Bind ViewModel.Message, Mode=TwoWay}" 
				Margin="0,0,0,5" AcceptsReturn="True" TextWrapping="Wrap" Grid.ColumnSpan="2"/>
            
            <Button Grid.Column="1" Grid.Row="6" Content="Send" HorizontalAlignment="Left" Command="{x:Bind ViewModel.SendMoneyCommand}" />

            <StackPanel Grid.Column="1" Grid.Row="7" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Border HorizontalAlignment="Left" Background="#FFFF8A8A" Width="300" 
                        Visibility="{x:Bind ViewModel.NrsErrorMessage, Mode=OneWay, Converter={StaticResource HasTextToVisiblityConverter}}">
                    <TextBlock Text="{x:Bind ViewModel.NrsErrorMessage, Mode=OneWay}" Padding="10" TextWrapping="WrapWholeWords" />
                </Border>
                <StackPanel HorizontalAlignment="Left" Background="#FF8FD3F1" Padding="10"
                            Visibility="{x:Bind ViewModel.RecipientInfo, Mode=OneWay, Converter={StaticResource HasTextToVisiblityConverter}}">
                    <TextBlock Text="{x:Bind ViewModel.RecipientInfo, Mode=OneWay}" TextWrapping="WrapWholeWords" />
                </StackPanel>
            </StackPanel>
            
            <controls:NetworkIndicatorControl Grid.Row="0" Grid.Column="2" />
        </Grid>
    </Grid>
</Page>
