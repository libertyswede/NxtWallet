<Page
    x:Class="NxtWallet.Views.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:NxtWallet.Controls"
    xmlns:nxtWallet="using:NxtWallet"
    mc:Ignorable="d"
    DataContext="{Binding Path=OverviewViewModel, Source={StaticResource Ioc}}">
    <Page.Resources>
        <nxtWallet:BoolToVisiblityConverter x:Key="BoolToVisibilityConverter" />
        <nxtWallet:StringFormatConverter x:Key="StringFormatConverter" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="VisualStateMin0">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource VisualStateMin0}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TextBlock.(TextBlock.FontSize)" Value="18.667"/>
                        <Setter Target="InnerGrid.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>15,50,15,0</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="BalanceTextBlock.(TextBlock.FontSize)" Value="16"/>
                        <Setter Target="AccountLedgerTextBlock.(TextBlock.FontSize)" Value="16"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateMin540">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource VisualStateMin540}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TextBlock.(TextBlock.FontSize)" Value="24"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MasterColumn" Width="*"/>
            <ColumnDefinition x:Name="DetailsColumn" Width="320" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="InnerGrid" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="15,10,15,10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Visibility="{x:Bind ViewModel.ShowAddress, Converter={StaticResource BoolToVisibilityConverter}}" x:Name="TextBlock" 
                       TextWrapping="NoWrap" Text="{x:Bind ViewModel.NxtAddress, Mode=OneWay}" FontSize="24" Grid.Column="0" />
                <controls:NetworkIndicatorControl HorizontalAlignment="Right" Grid.Column="1" />
            </Grid>
            <Border Grid.Row="1" Margin="0,5,0,0" Padding="0,0,0,10" BorderBrush="AliceBlue" BorderThickness="0,0,0,2">
                <TextBlock x:Name="BalanceTextBlock" TextWrapping="NoWrap" FontSize="21.333">
                    <Run Text="Balance:" />
                    <Run Text="{x:Bind ViewModel.NxtBalance, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:#,##0.00}'}" />
                </TextBlock>
            </Border>
            <TextBlock Grid.Row="2" x:Name="AccountLedgerTextBlock" Text="Account Ledger" FontSize="21.333" Margin="0,20,0,0" />
            <controls:LedgerEntryListControl Grid.Row="3" x:Name="AccountLedgerList" Margin="0,10,0,0" />
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10">
            <TextBlock x:Name="HeaderTextBlock" 
                       Visibility="{x:Bind ViewModel.SelectedLedgerEntry.TransactionId.HasValue, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" >
                <Run Text="Transaction:" />
                <Hyperlink NavigateUri="{x:Bind ViewModel.SelectedLedgerEntryLink, Mode=OneWay}" >
                    <Run Text="{x:Bind ViewModel.SelectedLedgerEntry.TransactionId.Value, Mode=OneWay}" />
                </Hyperlink>
            </TextBlock>
            <Border BorderBrush="LightGray" BorderThickness="1">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="AmountLabelTextBlock" Grid.Row="0" Grid.Column="0" Text="Amount:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="AmountValueTextBlock" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5" >
                        <Run Text="{x:Bind ViewModel.SelectedLedgerEntry.NxtAmount, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:#,##0.00######}'}" />
                        <Run Text="NXT" />
                    </TextBlock>
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#FFF4F4F4" />
                    <TextBlock x:Name="FeeLabelTextBlock" Grid.Row="1" Grid.Column="0" Text="Fee:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="FeeValueTextBlock" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5" >
                        <Run Text="{x:Bind ViewModel.SelectedLedgerEntry.NxtFee, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:#,##0.00######}'}" />
                        <Run Text="NXT" />
                    </TextBlock>
                    <TextBlock x:Name="BalanceLabelTextBlock" Grid.Row="2" Grid.Column="0" Text="Balance:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="BalanceValueTextBlock" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5" >
                        <Run Text="{x:Bind ViewModel.SelectedLedgerEntry.NxtBalance, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:#,##0.00######}'}" />
                        <Run Text="NXT" />
                    </TextBlock>
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Background="#FFF4F4F4" />
                    <TextBlock x:Name="SenderLabelTextBlock" Grid.Row="3" Grid.Column="0" Text="Sender:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="SenderValueTextBlock" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5"
                               Text="{x:Bind ViewModel.SelectedLedgerEntry.ContactListAccountFrom, Mode=OneWay}" />
                    <TextBlock x:Name="RecipientLabelTextBlock" Grid.Row="4" Grid.Column="0" Text="Recipient:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="RecipientValueTextBlock" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5"
                               Text="{x:Bind ViewModel.SelectedLedgerEntry.ContactListAccountTo, Mode=OneWay}" />
                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Background="#FFF4F4F4" />
                    <TextBlock x:Name="TimestampLabelTextBlock" Grid.Row="5" Grid.Column="0" Text="Timestamp:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="TimestampValueTextBlock" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5"
                               Text="{x:Bind ViewModel.SelectedLedgerEntry.Timestamp, Mode=OneWay, Converter={StaticResource DateTimeConverter}, ConverterParameter='yyyy-MM-dd HH:mm:ss'}" />
                    <TextBlock x:Name="PlainMessageLabelTextBlock" Grid.Row="6" Grid.Column="0" Text="Public message:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="PlainMessageValueTextBlock" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5"
                               Text="{x:Bind ViewModel.SelectedLedgerEntry.PlainMessage, Mode=OneWay}" />
                    <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Background="#FFF4F4F4" />
                    <TextBlock x:Name="EncryptedMessageLabelTextBlock" Grid.Row="7" Grid.Column="0" Text="Enctyped message:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="EncryptedMessageValueTextBlock" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5"
                               Text="{x:Bind ViewModel.SelectedLedgerEntry.EncryptedMessage, Mode=OneWay}" />
                    <TextBlock x:Name="NoteToSelfMessageLabelTextBlock" Grid.Row="8" Grid.Column="0" Text="Note to self:" FontWeight="Bold" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,5,10,5" />
                    <TextBlock x:Name="NoteToSelfMessageValueTextBlock" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,10,5"
                               Text="{x:Bind ViewModel.SelectedLedgerEntry.NoteToSelfMessage, Mode=OneWay}" />
                </Grid>
            </Border>
        </StackPanel>

    </Grid>
</Page>
